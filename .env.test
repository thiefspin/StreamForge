# StreamForge Test Environment Configuration
# This file contains test configuration for local development and testing

# Server Configuration
HOST=127.0.0.1
PORT=8080
LOG_LEVEL=debug
ENVIRONMENT=development
REQUEST_TIMEOUT_SECS=30
SHUTDOWN_TIMEOUT_SECS=30

# Database Configuration
POSTGRES_URL=postgresql://streamforge:streamforge@localhost:5432/streamforge_test
DATABASE_POOL_MAX_SIZE=10
DATABASE_POOL_MIN_IDLE=2
DATABASE_POOL_TIMEOUT_SECONDS=30
DATABASE_POOL_IDLE_TIMEOUT_SECONDS=600

# Kafka Configuration
KAFKA_BROKERS=localhost:9092
KAFKA_GROUP_ID=streamforge-test-consumer
KAFKA_INPUT_TOPIC=events.input.v1.test
KAFKA_DLQ_TOPIC=events.dlq.v1.test
KAFKA_AUTO_OFFSET_RESET=earliest
KAFKA_SESSION_TIMEOUT_MS=30000
KAFKA_ENABLE_AUTO_COMMIT=false
KAFKA_MAX_POLL_INTERVAL_MS=300000

# Parquet Configuration
PARQUET_ROOT=./data/test/parquet/events
PARQUET_FLUSH_MAX_ROWS=1000
PARQUET_FLUSH_INTERVAL_SECS=30
PARQUET_COMPRESSION=snappy
PARQUET_BUFFER_SIZE=100

# Processing Configuration
WORKER_CONCURRENCY=4
MAX_RETRIES=3
RETRY_BASE_MS=100
RETRY_MAX_MS=5000
BATCH_SIZE=50

# Metrics Configuration
METRICS_ENABLED=true
METRICS_PORT=9090
METRICS_PATH=/metrics

# Feature Flags
ENABLE_PARQUET_EXPORT=true
ENABLE_METRICS=true
ENABLE_TRACING=true
TLS_ENABLED=false
